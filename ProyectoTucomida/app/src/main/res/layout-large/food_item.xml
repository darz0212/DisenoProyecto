
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_100">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_large"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/dishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="@dimen/dish_title_padding"
                android:paddingRight="@dimen/dish_title_padding"
                android:paddingTop="@dimen/dish_title_padding"
                android:textSize="@dimen/large_text_secondary"/>

            <TextView
                android:id="@+id/dishPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dishName"
                android:paddingBottom="@dimen/dish_price_padding_bottom"
                android:paddingLeft="@dimen/dish_title_padding"
                android:paddingRight="@dimen/dish_title_padding"
                android:textSize="@dimen/large_text_secondary"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>